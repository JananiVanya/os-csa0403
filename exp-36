#include <stdio.h>

struct block {
    int data;
    int next;
};

int main() {
    struct block file[50];
    int n, i, start, curr, search;

    printf("Enter number of blocks in the file: ");
    scanf("%d", &n);

    printf("Enter data block numbers:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &file[i].data);
        file[i].next = i + 1;
    }

    file[n - 1].next = -1;   // Last block

    start = 0;   // Starting block pointer

    printf("\nLinked File Allocation\n");
    printf("Block\tData\tNext\n");

    for (i = 0; i < n; i++) {
        printf("%d\t%d\t%d\n", i, file[i].data, file[i].next);
    }

    printf("\nDirectory Information:\n");
    printf("First Block: %d\n", start);
    printf("Last Block: %d\n", n - 1);

    printf("\nEnter block position to access (0 to %d): ", n - 1);
    scanf("%d", &search);

    if (search >= 0 && search < n) {
        curr = start;
        printf("\nAccessing file blocks:\n");
        while (curr != -1) {
            printf("Reading block %d\n", curr);
            if (curr == search) {
                printf("Block %d accessed successfully.\n", curr);
                break;
            }
            curr = file[curr].next;
        }
    } else {
        printf("Invalid block position.\n");
    }

    return 0;
}
