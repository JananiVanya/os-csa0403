#include <stdio.h>

int main() {
    int frames, pages;
    int page[50], frame[10];
    int i, j, k = 0;
    int pageFaults = 0, flag;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter page reference string:\n");
    for (i = 0; i < pages; i++)
        scanf("%d", &page[i]);

    for (i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage\tFrames\n");

    for (i = 0; i < pages; i++) {
        flag = 0;

        /* Check for page hit */
        for (j = 0; j < frames; j++) {
            if (frame[j] == page[i]) {
                flag = 1;
                break;
            }
        }

        /* Page fault */
        if (flag == 0) {
            frame[k] = page[i];
            k = (k + 1) % frames;
            pageFaults++;
        }

        printf("%d\t", page[i]);
        for (j = 0; j < frames; j++) {
            if (frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
